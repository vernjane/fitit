<div class="container-fluid">
<div class="row justify-content-center">
<div class="column-6">

    <%= form_tag({controller: "orders", action: "create"}, method: "post") do %>
        <div class="form-group">
            <label for="fname">First Name</label>
            <input type="text" class="form-control" id="fname" aria-describedby="fnameHelp" placeholder="First Name">
        </div>

        <div class="form-group">
            <label for="lname">Last Name</label>
            <input type="text" class="form-control" id="lname" aria-describedby="lnameHelp" placeholder="Last Name">
        </div>

        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" aria-describedby="EmailHelp" placeholder="Email">
        </div>

        <div class="form-group">
            <label for="phone">Phone Number</label>
            <input type="text" class="form-control" id="phone" aria-describedby="phoneHelp" placeholder="Phone Number">
        </div>

        

        <div class="form-group">
            <label for="street_address">Address</label>
            <input type="text" class="form-control" placeholder="1234 Main St" aria-label="Street Address" name="street_address">
        </div>

        <div class="form-group">
            <label for="street_address">Address (line 2) </label>
            <input type="text" class="form-control" placeholder="Apartment or suite" aria-label="Street Address" name="unit_number">
        </div>

        <div class="form-group">
            <label for="city">City</label>
            <input type="text" class="form-control" placeholder="City" aria-label="City" name="city">
        </div>

        <div class="form-group">
            <label for="street_address">Province</label>
            <input type="text" class="form-control" placeholder="ON" aria-label="Province" name="province">
        </div>



        <div class="form-group">
            <label for="postal_code">Postal Code</label>
            <input type="text" class="form-control" placeholder="Postal Code" aria-label="Postal Code" name="postal_code">
        </div>
    
        <button type="submit" class="btn btn-success btn btn-block">Place Order</button>
    <% end %>

</div>
</div>
</div>

