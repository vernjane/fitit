<%= form_for @order do |f| %>

    <div class="form-group">
        <%= f.label :fname, "First Name: " %>
        <%= f.text_field :fname, class: "form-control", placeholder: "e.g. James", :required => true %>
    </div>

    <div class="form-group">
        <%= f.label :lname, "Last Name: " %>
        <%= f.text_field :lname, class: "form-control", placeholder: "e.g. Bond", :required => true %>
    </div>

    <div class="form-group">
        <%= f.label :email, "Email: "%>
        <%= f.email_field :email, class: "form-control", placeholder: "e.g. james.bond@gmail.com", :required => true %>
    </div>

    <div class="form-group">
        <%= f.label :phone, "Phone Number: " %>
        <%= f.telephone_field :phone, class: "form-control", placeholder: "e.g. 905 007 0707", :required => true %>
    </div>

    <div class="form-group">
        <%= f.label :street_address, "Address: " %>
        <%= f.text_field :street_address, class: "form-control", placeholder: "e.g. 221B Baker Street", :required => true %>
    </div>

    <div class="form-group">
        <%= f.label :unit_number, "Address (line 2): " %>
        <%= f.text_field :unit_number, class: "form-control", placeholder: "e.g. Apt. 7" %>
    </div>

    <div class="form-group">
        <%= f.label :city, "City: " %>
        <%= f.text_field :city, class: "form-control", placeholder: "e.g. Toronto", :required => true %>
    </div>

    <div class="form-group">
        <%= f.label :province, "Province: " %>
        <%= f.text_field :province, class: "form-control", placeholder: "e.g. ON", :required => true %>
    </div>

    <div class="form-group">
        <%= f.label :postal, "Postal Code: " %>
        <%= f.text_field :postal, class: "form-control", placeholder: "e.g. L0M 0K7", :required => true %>
    </div>

    <%= f.submit "Place order", class: "btn btn-success btn btn-block my-3" %>

<% end %>