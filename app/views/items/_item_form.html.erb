
<%= form_for ([@order, @item]) do |f| %>     
    
    <div class="form-group">
        <%= f.label :description, "Describe it:" %>
        <%= f.text_area :description, class: "form-control", placeholder: "Black stretch pants, high rise, 3/4 length" %>
    </div>

    <div class="form-group">
        <%= f.label :color, "What color?" %>
        <%= f.text_field :color, class: "form-control", placeholder: "Black! I told you already!" %>
    </div>

    <div class="form-group">
        <%= f.label :color, "What size?" %>
        <%= f.text_field :size, class: "form-control", placeholder: "Mmmm, M I think? Maybe L..." %>
    </div>

    <%= f.submit "Bring that to me!", class: "btn btn-success" %>

<% end %>