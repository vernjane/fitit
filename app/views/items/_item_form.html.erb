
<%= form_for ([@order, @item]) do |f| %>     
    
    <div class="form-group">
        <%= f.label :description, "Describe it:" %>
        <%= f.text_area :description, class: "form-control", placeholder: "Black stretch pants, high rise, 3/4 length", :required => true%>
    </div>

    <div class="form-group">
        <%= f.label :color, "What color?" %>
        <%= f.text_field :color, class: "form-control", placeholder: "Black! I told you already!", :required => true%>
    </div>

    <div class="form-group">
        <%= f.label :color, "What size?" %>
        <%= f.text_field :size, class: "form-control", placeholder: "Mmmm, M I think? Maybe L...", :required => true%>
    </div>

    <%= f.submit "Add to cart", class: "btn btn-success my-3" %>

<% end %>