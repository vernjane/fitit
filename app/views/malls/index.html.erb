
<div class="container-fluid">
    
    <div class="row">
        <div class="col-12">
            <h1>We're available <%= @city%>, <%=@province%></h1>
        </div>
        
    </div>
    <hr>

    <% @malls.each do |mall| %>   
        <div class="row">
            <div class="col-12">
                <p><%=mall.name%></p>
            </div>
            <div class="col-12">
                <p><%=mall.address%></p>
            </div>
            <%=link_to "Select", mall_path(mall.id)%>
        </div>
        <hr>
    <% end %>
    
</div>