
<div class="container-fluid">
    
    <div class="row">
        <div class="col-12">
            <h1>We're available <%= @city%>, <%=@province%></h1>
        </div>
        
    </div>
    <hr>

    <% @malls.each do |mall| %>   
        <div class="row">
            <div class="column-4 px-3">
                <p><%=mall.name%></p>
                <p><%=mall.address%></p>
                <%=link_to "Select", mall_path(mall.id), class: "btn btn-success" %>
            </div>
            <div class="column-8 px-3 mall-stores">
                <% mall.stores.each do |store| %>
                    <%= image_tag "#{store.logo}", class: "font-weight-normal m-1 border", alt: "#{store.name} same day delivery" %>
                <% end %>
                </div>
        </div>
        <hr>
    <% end %>
    
</div>